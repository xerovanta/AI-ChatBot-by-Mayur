{
  // This "extends" is the most important part.
  // It tells this file to inherit all the settings
  // from your base tsconfig.json.
  "extends": "./tsconfig.json", 
  
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "target": "ES2020"
  },
  "include": [
    "src" // This file *only* includes the app code
  ]
}

